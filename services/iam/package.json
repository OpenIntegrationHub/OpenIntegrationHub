{
  "name": "iam-service",
  "version": "1.0.0",
  "description": "Identity and Access Management Service",
  "main": "index.js",
  "scripts": {
    "watch": "yarn watch-scss & nodemon src/index.js --watch ./ ",
    "watch-scss": "yarn build -- --watch",
    "watch-test": "jest --watch --runInBand",
    "start": "node src/index.js",
    "build": "node-sass-chokidar ./src/views/style -o ./src/views/style",
    "lint": "eslint --fix src/ test/",
    "task": "node",
    "generate-keystore": "node -e 'require(\"./src/oidc/util/generate-keystore\").generateFile()'",
    "generate-nodemon-env": "node -e 'require(\"./src/util/nodemon-env\").saveToFile()'",
    "test": "yarn build && yarn lint && echo 'jest --silent=false --runInBand --forceExit'",
    "coverage": "jest --runInBand --coverage --forceExit",
    "postinstall": "node ./src/app/dev/generateKeys.js",
    "build:docker": "docker build -t openintegrationhub/iam:${VERSION} -f Dockerfile ."
  },
  "keywords": [
    "OIDC",
    "OAuth2",
    "JWT",
    "Authentication"
  ],
  "repository": "https://github.com/openintegrationhub/IAM",
  "license": "Apache-2.0",
  "author": "Basaas GmbH",
  "dependencies": {
    "@basaas/node-logger": "1.1.2",
    "base64-url": "2.2.0",
    "bluebird": "3.5.3",
    "body-parser": "1.18.3",
    "connect-mongo": "2.0.3",
    "cookie-parser": "1.4.3",
    "cors": "2.8.5",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "express-session": "1.15.6",
    "favicon-url": "0.0.5",
    "jsonwebtoken": "8.4.0",
    "lodash": "4.17.11",
    "memwatch-next": "0.3.0",
    "moment": "2.24.0",
    "mongodb": "3.1.13",
    "mongoose": "5.4.9",
    "ms": "2.1.1",
    "node-jose": "1.1.1",
    "oidc-provider": "5.5.3",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "passport-local-mongoose": "5.0.1",
    "pug": "2.0.3",
    "request": "2.88.0",
    "request-promise": "4.2.2",
    "swagger-ui-express": "4.0.2",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jasmine": "2.10.1",
    "eslint-plugin-jest": "22.2.2",
    "jest": "24.0.0",
    "mockgoose": "8.0.1",
    "node-forge": "0.8.0",
    "node-sass-chokidar": "1.3.4",
    "nodemon": "1.18.9",
    "supertest": "3.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "silent": false
  }
}
