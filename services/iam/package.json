{
  "name": "iam-service",
  "version": "1.0.0",
  "description": "Identity and Access Management Service",
  "main": "index.js",
  "scripts": {
    "watch": "yarn watch-scss & nodemon src/index.js --watch ./ ",
    "watch-scss": "yarn build-css -- --watch",
    "watch-test": "jest --watch --runInBand",
    "start": "node src/index.js",
    "build": "node-sass-chokidar ./src/views/style -o ./src/views/style",
    "lint": "eslint src/ test/",
    "task": "node",
    "generate-keystore": "node -e 'require(\"./src/oidc/util/generate-keystore\").generateFile()'",
    "generate-nodemon-env": "node -e 'require(\"./src/util/nodemon-env\").saveToFile()'",
    "test": "yarn build && yarn lint && jest --silent=false --runInBand --forceExit",
    "coverage": "jest --runInBand --coverage --forceExit",
    "postinstall": "node ./src/app/dev/generateKeys.js",
    "build:docker": "docker build -t openintegrationhub/iam:${VERSION} -f Dockerfile ."
  },
  "keywords": [
    "OIDC",
    "OAuth2",
    "JWT",
    "Authentication"
  ],
  "repository": "https://github.com/openintegrationhub/IAM",
  "license": "Apache-2.0",
  "author": "Basaas GmbH",
  "dependencies": {
    "@basaas/node-logger": "^1.1.1",
    "base64-url": "2.2.0",
    "bluebird": "3.5.1",
    "body-parser": "1.18.2",
    "connect-mongo": "2.0.1",
    "cookie-parser": "1.4.3",
    "cors": "2.8.4",
    "express": "4.16.3",
    "express-session": "1.15.6",
    "jsonwebtoken": "8.2.2",
    "lodash": "4.17.10",
    "moment": "2.22.2",
    "mongodb": "3.1.1",
    "mongoose": "5.2.4",
    "node-jose": "0.11.0",
    "oidc-provider": "4.3.0",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "passport-local-mongoose": "5.0.0",
    "pug": "2.0.3",
    "querystring": "0.2.0",
    "request": "^2.87.0",
    "request-promise": "4.2.2",
    "swagger-ui-express": "3.0.10",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "eslint": "4.19.1",
    "eslint-config-airbnb-base": "11.3.2",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-jasmine": "2.10.1",
    "eslint-plugin-jest": "21.17.0",
    "jest": "23.1.0",
    "mockgoose": "7.3.5",
    "node-forge": "0.7.5",
    "node-sass-chokidar": "1.3.0",
    "nodemon": "1.17.5",
    "supertest": "3.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
