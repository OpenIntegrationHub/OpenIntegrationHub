            }
          }
        },
        "responses": {
          "200": {
            "description": "Id of created user",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [{
                    "$ref": "#/components/schemas/UserObject"
                  }],
                  "type": "object",
                  "properties": {
                    "currentContext": {
                      "$ref": "#/components/schemas/Membership"
                    }
                  }
                }
              }
