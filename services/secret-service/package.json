{
  "name": "secret-service",
  "version": "2.2.0",
  "description": "Service to manage Keys/Tokens of external services",
  "main": "index.js",
  "author": "Basaas GmbH",
  "license": "Apache-2.0",
  "scripts": {
    "start": "node src/index.js",
    "build": "echo \"No Build defined\"",
    "test": "jest",
    "watch": "nodemon src/index.js",
    "coverage": "yarn test --coverage",
    "build:docker": "docker build -t openintegrationhub/secret-service:${VERSION} -f Dockerfile ."
  },
  "dependencies": {
    "@basaas/node-logger": "1.1.5",
    "@openintegrationhub/iam-utils": "1.3.3",
    "base64url": "3.0.1",
    "dot-prop": "^4.2.0",
    "dotenv": "7.0.0",
    "express": "4.16.4",
    "jsonwebtoken": "8.5.1",
    "lru-cache": "5.1.1",
    "moment": "2.24.0",
    "mongoose": "5.4.20",
    "morgan": "1.9.1",
    "qs": "6.7.0",
    "request": "2.88.0",
    "request-promise": "4.2.2"
  },
  "devDependencies": {
    "eslint": "5.15.3",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.4.1",
    "get-port": "4.2.0",
    "jest": "24.5.0",
    "mongodb": "3.2.2",
    "mongodb-memory-server": "4.2.1",
    "nock": "10.0.6",
    "nodemon": "1.18.10",
    "supertest": "4.0.2"
  },
  "jest": {
    "globalSetup": "./src/test/setup.js",
    "globalTeardown": "./src/test/teardown.js",
    "testEnvironment": "./src/test/mongo-environment.js",
    "setupFilesAfterEnv": [
      "./src/test/jest.setup.js"
    ],
    "silent": false,
    "verbose": true
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --harmony"
    },
    "events": {
      "restart": ""
    },
    "watch": [
      "src/",
      "doc/"
    ],
    "ext": "js json yaml"
  }
}
